# store any upgrades inside the armor stands head item and check if there is any, don't overwrite existing upgrades
execute if block ~ ~ ~ barrel{Items:[{Slot:9b,components:{"minecraft:custom_data":{hand_mod:1b}},count:1}]} unless data entity @e[type=minecraft:armor_stand,tag=exp.mod_vehicle,predicate=expansion:compare_score/modstation,distance=..50,limit=1] ArmorItems[3].components.minecraft:custom_data.ModStorage.lefthand.id store success score @s exp.bool run data modify entity @s ArmorItems[3].components.minecraft:custom_data.ModStorage.lefthand set from block ~ ~ ~ Items[{Slot:9b}]
execute if block ~ ~ ~ barrel{Items:[{Slot:14b,components:{"minecraft:custom_data":{hand_mod:1b}},count:1}]} unless data entity @e[type=minecraft:armor_stand,tag=exp.mod_vehicle,predicate=expansion:compare_score/modstation,distance=..50,limit=1] ArmorItems[3].components.minecraft:custom_data.ModStorage.righthand.id store success score @s exp.bool run data modify entity @s ArmorItems[3].components.minecraft:custom_data.ModStorage.righthand set from block ~ ~ ~ Items[{Slot:14b}]
